---
import Footer from "@components/Footer.astro";
import Navbar from "@components/Navbar.astro";
import { checkImageUrl } from "@utils/all";
import { SEO } from "astro-seo";

export interface Props {
	title: string;
	desc?: string;
  	ogimage?: string;
}

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const { title, desc, ogimage = "/opengraph.png" } = Astro.props;

const resolvedOGImage = checkImageUrl(ogimage, Astro.site);

const makeTitle = title
  ? title + " | " + "JLC"
  : "JLC â€” Consultora de proyectos electricos";
---

<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<SEO
      title={makeTitle}
      description={desc ||
        "JLC es una empresa de consultoria y proyectos"}
      canonical={canonicalURL}
      twitter={{
        creator: "@surjithctly",
        site: "@web3templates",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `JLC - Empresa de consultoria y proyectos electricos`,
          image: resolvedOGImage,
        },
        image: {
          alt: "JLC Imagen",
        },
      }}
    />
	</head>
	<body>
    <Navbar />
		<slot />
    <Footer />
		<style is:global>
			/* Improve Page speed */
			/* https://css-tricks.com/almanac/properties/c/content-visibility/ */
			img {
			  content-visibility: auto;
			}
		  </style>
	</body>
</html>

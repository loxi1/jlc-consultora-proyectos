---
import type { menuInferior } from '@utils/data';
import Container from './Container.astro';
import SocialNetworks from './SocialNetworks.astro';

interface Link {
    text?: string;
	tipo?: number;
    href?: string;
    ariaLabel?: string;
    icon?: string;
}

interface MenuFooter {
	title: string;
	href?: string;
}

interface Menu_Footer extends MenuFooter {
	superior?: Array<MenuFooter>;
	inferior?: Array<MenuFooter>;
	submenuinferior?: Array<MenuFooter>;
	submenusuperior?: Array<MenuFooter>;
}

interface MenuLink extends Link {
    links?: Array<Link>;
}

export interface Props {
    links?: Array<MenuLink>;
	superior?: Array<Menu_Footer>;
	inferior?: Array<Menu_Footer>;
	submenuinferior?: Array<Menu_Footer>;
	submenusuperior?: Array<Menu_Footer>;
}

const { links = [], superior =  [], inferior =  [], submenuinferior = [], submenusuperior = []} = Astro.props;
---

<footer class='page-footer text-white w-full p-12 bg-gradient-to-b from-principal-300 via-principal-700 to-principal relative overflow-hidden [&>div]:relative [&>div]:z-10'>
	<Container>
		<section class='flex flex-col justify-center lg:flex-row lg:justify-between gap-10 text-sm my-10'>
			<a href='/' class="basis-1/3">
				<img
					class='mx-auto lg:ml-0 aspect-[208/92]'
					src='/logos/jlc-logo.svg'
					alt='logo de Adler'
					loading='lazy'
					decoding='async'
					fetchpriority='low'
					width='230'
					height='92'
				/>
			</a>

			<nav class='basis-2/3'>
				<div class="flex flex-wrap gap-4 justify-center lg:justify-between lg:gap-x-14 lg:gap-y-4 w-full">
					<a href="/proyectos" class="block lg:hidden hover:underline font-semibold text-xl">Proyectos</a>
					<p class="block lg:hidden font-semibold text-xl">Servicios</p>
				</div>
				<div class="flex flex-wrap gap-4 justify-center lg:justify-between lg:gap-x-14 lg:gap-y-4">
					<a href="/proyectos" class="hidden lg:block hover:underline font-semibold text-xl">Proyectos</a>
					<div class="hidden lg:block">
						<p  class="hidden lg:block hover:underline font-semibold text-xl">Servicios</p>
						<ul class="text-sm text-sm text-normal">
							{
								submenusuperior.map(({title, href=''}) => (
									<li class="mb-2">
										<a href={href} class='hover:text-verde-700 hover:underline dark:text-principal-400 transition duration-150 ease-in-out'>
											{title}
										</a>
									</li>
								))
							}
						</ul>
					</div>
				</div>
			</nav>
		</section>

		<section
			class='flex flex-col lg:flex-row text-center lg:text-left gap-14 lg:gap-4 text-sm text-lig my-10'
		>
			<nav
				class='flex flex-col lg:flex-row gap-5 md:gap-4 justify-between w-full align-middle items-center'
			>
				<SocialNetworks theme='dark' />

				<nav class='flex flex-wrap gap-5 justify-center lg:justify-around'>
					{
						submenuinferior.map(({title, href}) => (
								<a href={href} class='text-center hover:underline font-semibold text-xl'>
									{title}
								</a>
						))
					}
				</nav>
			</nav>
		</section>
	</Container>
</footer>

<style>
	.page-footer::after {
		content: '';
		width: 100%;
		height: 100%;
		position: absolute;
		top: 0;
		left: 0;
		background: url('/logos/jlc.svg') no-repeat;
		background-size: 95%;
  	background-position: center;
  	opacity: 0.12;
		pointer-events: none;
	}

	@media screen and (min-width: 992px) {
		.page-footer::after {
			background-size: 26%;
		}
	}
</style>

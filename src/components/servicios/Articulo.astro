---
interface Proyect {
    title?: string;
	description?: string;
    dia?: string;
    anio?: string;
    mes?: string;
}

interface Lista_Proyectos extends Proyect {
	proyectos?: Array<Proyect>;
}

export interface Props {
	proyectos?: Array<Lista_Proyectos>;
}

const { proyectos = []} = Astro.props;
---

{
    proyectos.map(({title, description, dia, anio, mes}) => (
        <>
            <article class="flex bg-white transition shadow-xl">
                <div class="rotate-180 p-2 bg-yellow-300 [writing-mode:_vertical-lr] hover:scale-125">
                    <time
                        datetime={dia}
                        class="flex items-center justify-between gap-4 text-xs font-bold uppercase text-principal-900"
                    >
                        <span>{anio}</span>
                        <span class="w-px flex-1 bg-white"></span>
                        <span>{mes}</span>
                    </time>
                </div>
                <div class="flex flex-1 flex-col justify-between">
                    <div class="border-principal-900/10 border-l-transparent p-6">
                        <a href="">
                            <h3 class="font-bold uppercase text-principal-900 text-xl">
                                {title}
                            </h3>
                            <ul
                                class="mt-2 leading-relaxed text-principal-700 line-clamp-3 [&_span]:text-lg"
                            >
                                <li class="flex items-center space-x-3">
                                    <svg class="flex-shrink-0 w-3 h-3 text-orange dark:text-verde-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
                                    <span
                                        >{description}</span
                                    >
                                </li>
                            </ul>
                        </a>
                    </div>
                </div>
            </article>
        </>
    ))
}


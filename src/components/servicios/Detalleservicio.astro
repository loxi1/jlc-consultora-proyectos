---
const { servicio = []} = Astro.props;
---

{
    servicio.map((det: any) => (
        <>
            <article class="flex bg-white transition hover:shadow-xl">
                <div class="rotate-180 p-2 [writing-mode:_vertical-lr]">
                    <time datetime="2022-10-10" class="flex items-center justify-between gap-4 text-xs font-bold uppercase text-gray-900">
                    <span></span>
                    <span class="w-px flex-1 bg-gray-900/10"></span>
                    <span>SERVICIO</span>
                    </time>
                </div>
                
                <div class="hidden sm:block w-1/2">
                    <img alt={det.title} src={`/imagenes/cajasinicio/${det.img}`} class="aspect-square h-full w-full object-cover">
                </div>
                
                <div class="flex flex-1 flex-col justify-between w-1/2">
                    <div class="border-l border-gray-900/10 p-4 sm:border-l-transparent sm:p-6">
                        <h2 class="font-bold uppercase text-3xl text-gray-900">
                            {det.title}
                        </h2>
                        <p class="mt-2 text-slate-500">{det.description}</p>
                        <ul class="mb-4 mt-2 space-y-4 text-left text-xl">
                        {
                            det.items.map((abc: any) => (
                                <li class="flex items-center space-x-3">
                                    <svg class="flex-shrink-0 w-6 h-6 text-principal dark:text-green-400" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path></svg>
                                    <span>{abc.item}</span>
                                </li>
                            ))
                        }
                        </ul>
                    </div>
                
                    <p class="mt-2 pl-10 pb-10 text-slate-500">{det.frases}</p>
                </div>
            </article>                    
        </>
    ))
}
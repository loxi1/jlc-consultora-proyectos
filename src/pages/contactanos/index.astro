---
import Layout from "@layouts/PageLayout.astro";
import Banner from "@components/principal/Banner.astro";
import Contenedor from "@components/principal/Contenedor.astro";

const meta = {
  title: "Contactános",
  description: "Empresa dedicada a consultoria y proyectos",
  dontUseTitleTemplate: true,
};
---

<Layout {meta}>
    <main>
      <Banner title="Contactános" paddin="20" img="banner/banner-02.jpg" />
    </main>
    <Contenedor>
        <div class="text-center">
        </div>
        <div class="grid md:grid-cols-2 gap-10 mx-auto max-w-full">
            <div class="m-10">
                <h2 class="font-medium text-2xl text-gray-800">Contacto JCL</h2>
                <h3 class="font-medium text-xl text-gray-800 mt-4">Estamos aquí para ayudar.</h3>
                <p class="text-lg leading-relaxed text-slate-500 mt-3">
                ¿Teniens algo que decir? <br/> Estamos aquí para ayudar.<br/> Rellene el formulario o envíe un correo electrónico o llame al teléfono.
                </p>
                <div class="mt-5">
                    <div class="flex items-center mt-2 space-x-2 text-gray-600">
                      <svg viewBox="0 0 24 24" class="text-gray-400 w-4 h-4" astro-icon="uil:map-marker"><path fill="currentColor" d="M12 2a8 8 0 0 0-8 8c0 5.4 7.05 11.5 7.35 11.76a1 1 0 0 0 1.3 0C13 21.5 20 15.4 20 10a8 8 0 0 0-8-8zm0 17.65c-2.13-2-6-6.31-6-9.65a6 6 0 0 1 12 0c0 3.34-3.87 7.66-6 9.65zM12 6a4 4 0 1 0 4 4 4 4 0 0 0-4-4zm0 6a2 2 0 1 1 2-2 2 2 0 0 1-2 2z"></path></svg>
                      <span>Tomas Catari N° 825—Los Olivos - Lima</span>
                    </div>
                    <div class="flex items-center mt-2 space-x-2 text-gray-600">
                      <svg viewBox="0 0 24 24" class="text-gray-400 w-4 h-4" astro-icon="uil:envelope"><path fill="currentColor" d="M19 4H5a3 3 0 0 0-3 3v10a3 3 0 0 0 3 3h14a3 3 0 0 0 3-3V7a3 3 0 0 0-3-3zm-.41 2-5.88 5.88a1 1 0 0 1-1.42 0L5.41 6zM20 17a1 1 0 0 1-1 1H5a1 1 0 0 1-1-1V7.41l5.88 5.88a3 3 0 0 0 4.24 0L20 7.41z"></path></svg><a href="mailto:hello@astroshipstarter.com">jcorreap@uni.pe</a>
                    </div>
                    <div class="flex items-center mt-2 space-x-2 text-gray-600">
                      <svg viewBox="0 0 24 24" class="text-gray-400 w-4 h-4" astro-icon="uil:phone"><path fill="currentColor" d="M19.44 13c-.22 0-.45-.07-.67-.12a9.44 9.44 0 0 1-1.31-.39 2 2 0 0 0-2.48 1l-.22.45a12.18 12.18 0 0 1-2.66-2 12.18 12.18 0 0 1-2-2.66l.42-.28a2 2 0 0 0 1-2.48 10.33 10.33 0 0 1-.39-1.31c-.05-.22-.09-.45-.12-.68a3 3 0 0 0-3-2.49h-3a3 3 0 0 0-3 3.41 19 19 0 0 0 16.52 16.46h.38a3 3 0 0 0 2-.76 3 3 0 0 0 1-2.25v-3a3 3 0 0 0-2.47-2.9zm.5 6a1 1 0 0 1-.34.75 1.05 1.05 0 0 1-.82.25A17 17 0 0 1 4.07 5.22a1.09 1.09 0 0 1 .25-.82 1 1 0 0 1 .75-.34h3a1 1 0 0 1 1 .79q.06.41.15.81a11.12 11.12 0 0 0 .46 1.55l-1.4.65a1 1 0 0 0-.49 1.33 14.49 14.49 0 0 0 7 7 1 1 0 0 0 .76 0 1 1 0 0 0 .57-.52l.62-1.4a13.69 13.69 0 0 0 1.58.46q.4.09.81.15a1 1 0 0 1 .79 1z"></path></svg><a href="tel:+1 (987) 4587 899">993-788178</a>
                    </div>
                </div>
            </div>
            <div>
                <form id="envio-correo">
                    
                    <input type="checkbox" class="hidden" style="display:none" name="botcheck">
                    <div class="mb-5">
                        <input type="text" placeholder="Nombre completo" required="" class="w-full px-4 py-3 border-2 placeholder:text-gray-800 rounded-md outline-none focus:ring-4 border-gray-300 focus:border-gray-600 ring-gray-100" name="name">
                        
                    </div>
                    <div class="mb-5">
                        <label for="email_address" class="sr-only">Correo</label>
                        <input id="email_address" type="email" placeholder="Correo" name="email" required="" class="w-full px-4 py-3 border-2 placeholder:text-gray-800 rounded-md outline-none focus:ring-4 border-gray-300 focus:border-gray-600 ring-gray-100">
                        
                    </div>
                    <div class="mb-3">
                        <textarea name="message" required="" placeholder="Tu mensaje" class="w-full px-4 py-3 border-2 placeholder:text-gray-800 rounded-md outline-none h-36 focus:ring-4 border-gray-300 focus:border-gray-600 ring-gray-100"></textarea>
                        
                    </div>
                    <button id="btn-contact" class="mx-auto rounded text-center transition focus-visible:ring-2 ring-offset-2 ring-gray-200 w-full px-6 py-3 bg-principal text-white hover:bg-slate-900 border-2 border-transparent">
                      <svg id="spinerflecha" xmlns="http://www.w3.org/2000/svg" width="50" height="50" fill="currentColor" class="inline hidden bi bi-arrow-repeat animate-spin" viewBox="0 0 16 16">
                        <path d="M11.534 7h3.932a.25.25 0 0 1 .192.41l-1.966 2.36a.25.25 0 0 1-.384 0l-1.966-2.36a.25.25 0 0 1 .192-.41zm-11 2h3.932a.25.25 0 0 0 .192-.41L2.692 6.23a.25.25 0 0 0-.384 0L.342 8.59A.25.25 0 0 0 .534 9z"/>
                        <path fill-rule="evenodd" d="M8 3c-1.552 0-2.94.707-3.857 1.818a.5.5 0 1 1-.771-.636A6.002 6.002 0 0 1 13.917 7H12.9A5.002 5.002 0 0 0 8 3zM3.1 9a5.002 5.002 0 0 0 8.757 2.182.5.5 0 1 1 .771.636A6.002 6.002 0 0 1 2.083 9H3.1z"/>
                      </svg> <span id="text-enviar">ENVIAR</span>
                    </button>
                    <div id="result" class="mt-3 text-center"></div>
                </form>
            </div>
        </div>
    </Contenedor>
  </Layout>

  <style>
    .font-medium {
        font-weight: 500
    }
  </style>
  <script>
    const form = document.getElementById("form");
    const result = document.getElementById("result");
  </script>